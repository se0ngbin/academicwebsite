<style>
  .bio-text {
    line-height: 1.8;
    font-size: 1.2rem;
    color: #333;
    margin-bottom: 1.5rem;
  }

  .bio-text a {
    color: var(--ucla-blue);
    text-decoration: none;
    font-weight: 600;
  }

  .tag-container {
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem;
    margin: 2.5rem 0;
  }

  .tag {
    background: #f0f7ff;
    color: #2774AE;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.9rem;
    font-weight: 600;
    border: 1px solid #ddecff;
    white-space: nowrap;
  }

  .news-box {
    background: #fff;
    border: 1px solid var(--border-color);
    padding: 0.3rem 1.5rem 1.5rem 1.5rem;
    border-radius: 12px;
  }

  .news-item {
    display: flex;
    gap: 3rem;
    margin-top: 1.2rem;
    align-items: baseline;
  }

  .news-date {
    font-weight: 800;
    color: var(--ucla-blue);
    min-width: 100px;
    font-size: 0.9rem;
    text-transform: uppercase;
  }

  .edu-timeline {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .edu-item {
    display: flex;
    justify-content: space-between;
    padding-left: 2rem;
    position: relative;
  }

  .edu-item::before {
    content: "";
    position: absolute;
    left: 7px;
    top: 30px;
    bottom: -1.5rem;
    width: 2px;
    background: #6191cfff;
  }

  .edu-item:last-child::before { display: none; }

  .edu-item::after {
    content: "";
    position: absolute;
    left: 1px;
    top: 8px;
    width: 14px;
    height: 14px;
    border-radius: 50%;
    background: var(--ucla-blue);
  }

  .edu-degree { font-weight: 700; font-size: 1.3rem; margin-bottom: 0.4rem; color: #111; }
  .edu-school { color: #444; font-size: 1.1rem; }
  .edu-detail { font-size: 1rem; color: var(--text-muted); margin-top: 0.3rem; }
  .edu-date { font-family: monospace; color: var(--text-muted); font-size: 1rem; font-weight: 500; }

  /* RESPONSIVE DESIGN */
  @media (max-width: 850px) {
    .edu-item { flex-direction: column; gap: 0.5rem; padding-bottom: 1rem; }
    .edu-date { text-align: left; }
  }
</style>